{% extends 'moderator/base.html.twig' %}

{% block title %}Region{% endblock %}

{% block body %}
    <h1>Region</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ region.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ region.name }}</td>
            </tr>
			<tr>
				<th>Departments</th>
				<td>
					{% for department in departments  %}
						<a href="{{ path('moderator_department_show', {'id' : department.id}) }}">{{ department.name }}</a><br><hr>
					{% endfor %}
				</td>
			</tr>
        </tbody>
    </table>

    <a href="{{ path('moderator_region_list') }}">back to list</a>

    <a href="{{ path('moderator_region_edit', {'id': region.id}) }}">edit</a>

    {{ include('moderator/region/_delete_form.html.twig') }}<br>
{% endblock %}