{% extends 'moderator/base.html.twig' %}

{% block title %}Comment{% endblock %}

{% block body %}
    <h1>Comment</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ comment.id }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ comment.description }}</td>
            </tr>
			<tr>
				<th>Author</th>
				<td>
					<a href="{{ path('moderator_user_show', {'slug' : comment.user.slug}) }}">{{ comment.user.firstname}}<br>
						{{ comment.user.lastname }}</a>
				</td>
			</tr>
            <tr>
                <th>DateAt</th>
                <td>{{ comment.dateAt ? comment.dateAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('moderator_comment_list') }}">back to list</a>

    <a href="{{ path('moderator_comment_edit', {'id': comment.id}) }}">edit</a>

    {{ include('moderator/comment/_delete_form.html.twig') }}
{% endblock %}