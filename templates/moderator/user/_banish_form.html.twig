{% if (true == user.isActive) %}
	<form method="post" action="{{ path('moderator_report_user_manage',{'slug' : user.slug}) }}" onsubmit="return confirm('Are you sure you want to ban this member?')">
		<button class="btn"><i class="fas fa-lock-open"></i> Bannir</button>
	</form>
{% else %} <form method="post" action="{{ path('moderator_report_user_manage',{'slug' : user.slug}) }}" onsubmit="return confirm('Are you sure you want to unban this member?')">

	<button class="btn"><i class="fas fa-lock"></i> Enlever le bannissement</button>
</form>
{% endif %}