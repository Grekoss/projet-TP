{% extends 'moderator/base.html.twig' %}

{% block title %}Department index{% endblock %}
{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('assets/css/moderator/style_index.css') }}">
{% endblock %}
{% block body %}
    <h1>Department index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Number</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for department in departments %}
            <tr>
                <td>{{ department.id }}</td>
                <td>{{ department.number }}</td>
                <td>{{ department.name }}</td>
                <td>
                    <a href="{{ path('moderator_department_show', {'id': department.id}) }}">show</a>
                    <a href="{{ path('moderator_department_edit', {'id': department.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('moderator_department_new') }}">Create new</a>
	<a href="{{ path('moderator_home') }}"><i class="fas fa-home"></i></a>
{% endblock %}