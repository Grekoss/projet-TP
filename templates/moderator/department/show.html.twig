{% extends 'moderator/base.html.twig' %}

{% block title %}Department{% endblock %}

{% block body %}
    <h1>Department</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ department.id }}</td>
            </tr>
            <tr>
                <th>Number</th>
                <td>{{ department.number }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ department.name }}</td>
            </tr>
			<tr>
				<th>Event(s)</th>
				<td>{% for event in events %}
						<a href="{{ path('moderator_event_show',{'slug' : event.slug}) }}">{{ event.name }}</a><br>
						<hr>
					{% endfor %}
				</td>
			</tr>
        </tbody>
    </table>

    <a href="{{ path('moderator_department_list') }}">back to list</a>

    <a href="{{ path('moderator_department_edit', {'id': department.id}) }}">edit</a>

    {{ include('moderator/department/_delete_form.html.twig') }}

	<a href="{{ path('moderator_home') }}"><i class="fas fa-home"></i></a>
{% endblock %}