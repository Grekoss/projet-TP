{% extends 'base.html.twig' %}

{% block title %}Welcome{% endblock %}

{% block body %}
{% set randomImg = random(13) %}

    <img class="homepage-image mr-auto ml-auto d-none d-md-block mw-100 mb-2 shadow-lg mb-5 rounded" src="{{ asset('assets/images/accueil/image-' ~ randomImg ~ '.jpg') }}" alt="Image d'accueil">
 
    {% for event in events %}
        <div class="d-md-none px-0">
            {% include 'partiels/_card_event_xs.html.twig' %}
        </div>
    {% endfor %}

    <div class="d-none d-md-flex flex-wrap">
        {% for event in events %}
            <div class="col-md-6 mt-3 col-xl-3">
                {% include 'partiels/_card_event.html.twig' %}
            </div>
        {% endfor %}
    </div>

    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
    <div class="d-none d-xl-block my-5">
        
        <div class="h2 alert alert-warning mx-auto mb-2 px-5 text-center mt-5" role="alert">Derniers membres connect√©s</div>
        <div class="d-flex flex-wrap">
            {% for user in lastUsersConnected %}
                <div class="col-2">
                    {% include 'partiels/_card_user_little.html.twig' %}
                </div>
            {% endfor %}    
        </div>

        <div class="h2 alert alert-warning mx-auto mb-2 px-5 text-center mt-5" role="alert">Derniers membres inscrits</div>
        <div class="d-flex flex-wrap">
            {% for user in lastUsersCreated %}
            <div class="col-2">
                {% include 'partiels/_card_user_little.html.twig' %}
            </div>
            {% endfor %}
        </div>
    </div>
    {% endif %}

{% endblock %}



