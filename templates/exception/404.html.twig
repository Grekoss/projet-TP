{% extends 'base.html.twig' %}

{% block title %}Page non trouvée{% endblock %}

{% block stylesheets %}
    <link href='https://fonts.googleapis.com/css?family=Anton|Passion+One|PT+Sans+Caption' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="{{ asset('assets/css/404.css') }}">
{% endblock %}

{% block body %}

    <div class="error">
        <div class="container-floud">
            <div class="col-xs-12 ground-color text-center">
                <div class="container-error-404">
                    <div class="clip">
                        <div class="shadow">
                            <span class="digit thirdDigit"></span></div>
                    </div>
                    <div class="clip">
                        <div class="shadow">
                            <span class="digit secondDigit"></span></div>
                    </div>
                    <div class="clip">
                        <div class="shadow">
                            <span class="digit firstDigit"></span></div>
                    </div>
                    <div class="msg">AIE!<span class="triangle"></span></div>
                </div>
                <h2 class="h1">Pardon! Page non trouvée</h2>
                <a href="javascript:history.back()">Retour à la page précédente</a>
            </div>
        </div>
    </div>

{% endblock %}

{% block javascript %}
    <script src="{{ asset('assets/js/404.js') }}"></script>
{% endblock %}
